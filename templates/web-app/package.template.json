{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "description": "Web application built with Next.js, Prisma, and PostgreSQL",
  "scripts": {
    "build": "turbo build",
    "build:clean": "turbo build --force",
    "build:docker": "docker-compose build",
    "dev": "turbo dev",
    "dev:worker": "turbo dev --filter=worker",
    "worker": "turbo start --filter=worker",
    "db:migrate": "turbo db:migrate --filter=database",
    "db:generate": "turbo db:generate --filter=database",
    "db:studio": "turbo db:studio --filter=database",
    "db:push": "turbo db:push --filter=database",
    "db:seed": "turbo db:seed --filter=database",
    "db:reset": "turbo db:reset --filter=database",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "docker:up": "docker-compose up -d postgres redis",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.2.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
